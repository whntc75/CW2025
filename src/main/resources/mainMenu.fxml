<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<VBox fx:controller="com.comp2042.MainMenuController"
      xmlns:fx="http://javafx.com/fxml"
      alignment="CENTER"
      spacing="20"
      prefWidth="400" prefHeight="500"
      styleClass="menu-background">

    <Label text="TETRIS" styleClass="menu-title"/>

    <VBox spacing="15" alignment="CENTER" style="-fx-padding: 30 0 0 0;">

        <Button fx:id="singlePlayerBtn"
                text="Single Player"
                styleClass="menu-button"
                onAction="#onSinglePlayer"
                prefWidth="200"/>

        <Button fx:id="twoPlayerBtn"
                text="Two Players"
                styleClass="menu-button"
                onAction="#onTwoPlayer"
                prefWidth="200"/>

        <Label text="VS AI" styleClass="menu-subtitle"/>

        <HBox spacing="10" alignment="CENTER">
            <Button fx:id="vsAiEasyBtn"
                    text="Easy"
                    styleClass="menu-button-small, ai-easy"
                    onAction="#onVsAiEasy"/>
            <Button fx:id="vsAiMediumBtn"
                    text="Medium"
                    styleClass="menu-button-small, ai-medium"
                    onAction="#onVsAiMedium"/>
            <Button fx:id="vsAiHardBtn"
                    text="Hard"
                    styleClass="menu-button-small, ai-hard"
                    onAction="#onVsAiHard"/>
        </HBox>
    </VBox>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>
</VBox>
